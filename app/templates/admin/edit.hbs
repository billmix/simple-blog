<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"><strong>Edit:</strong> {{model.title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{input value=model.title class="form-control my-3"}}
        {{input value=model.featured_image class="form-control my-3"}}
        {{textarea value=model.content class="form-control my-3" cols="80" rows="6"}}
        <label for="isFeatured">Is this post featured?</label>
        {{input type="checkbox" name="featured_post" checked=model.featured_post}}
        {{#if featured_post}}
        <p>This is a featured post!</p>
        {{/if}}
      </div>
      <div class="modal-footer">
        <button type="button" {{action "cancelEdit" model}} class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button class="btn btn-primary" type="submit" value="submit" {{action "updatePost" model}}>Save Changes</button>
      </div>
    </div>
  </div>
</div>
