<div class="container">
  <div class="row justify-content-center">
    <div class="col-md">
      <h1 class="text-center">Featured Posts</h1>
      {{email-status}}
    </div>
  </div>
  <div class="row justify-content-left">
        {{#each featuredPosts as |post|}}
        <div class="col-md-4">
          {{post-card featured_image=post.featured_image route=post title=post.title created_at=post.created_at content=post.content}}
        </div>
        {{/each}}
  </div>
</div>
